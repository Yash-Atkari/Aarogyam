<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Aarogyam</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous"/>
  <style>
    * {
      font-family: "Poppins", sans-serif;
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      background: linear-gradient(135deg, #d0e7ff, #f0f8ff);
      user-select: none;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding-top: 2rem;
    }

    .form-container {
      background: hsl(213, 85%, 97%);
      padding: 2em;
      border-radius: 30px;
      box-shadow: 0 0 2em hsl(231, 62%, 94%);
      width: 100%;
      max-width: 900px;
      margin: auto;
      margin-bottom: 2rem;
    }

    h1 {
      font-weight: 600;
      color: #333;
      text-align: center;
      margin-bottom: 1.5rem;
    }

    .form-label {
      font-weight: 500;
    }

    .form-control {
      border-radius: 20px;
      padding: 1em;
      box-shadow: 0 0 1em hsl(231, 62%, 94%);
      border: none;
    }

    .form-control:focus {
      box-shadow: 0 0 0 2px #1A73E8;
      outline: none;
    }

    .btn-primary {
      padding: 1em;
      background: #1A73E8;
      color: #fff;
      border: none;
      border-radius: 30px;
      font-weight: 600;
      cursor: pointer;
      width: 100%;
      transition: 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 5px 15px #1A73E8;
    }

    @media (max-width: 768px) {
      .form-container {
        padding: 1.5em;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <%- include("../../includes/flash") %>
    <div class="form-container">
      <h1>Doctor Sign up</h1>
      <form action="/auth/signup/doctor" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
          <input type="email" name="doctor[email]" id="email" placeholder="Enter email" class="form-control" required>
          <div class="invalid-feedback">Please provide a valid email.</div>
        </div>
      
        <div class="row">
          <!-- Username -->
          <div class="mb-3 col-md-6">
            <label for="username" class="form-label">Username <span class="text-danger">*</span></label>
            <input type="text" name="doctor[username]" id="username" placeholder="Enter username" class="form-control" required>
            <div class="invalid-feedback">Please provide a username.</div>
          </div>
          <!-- Password -->
          <div class="mb-3 col-md-6">
            <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
            <input type="password" name="doctor[password]" id="password" placeholder="Enter password" class="form-control" required autocomplete="new-password">
            <div class="invalid-feedback">Please provide a password.</div>
          </div>
        </div>
      
        <div class="row">
          <!-- Specialization -->
          <div class="mb-3 col-md-6">
            <label for="specialization" class="form-label">Specialization <span class="text-danger">*</span></label>
            <input type="text" name="doctor[specialization]" id="specialization" placeholder="Enter specialization" class="form-control" required>
            <div class="invalid-feedback">Please provide a specialization.</div>
          </div>
          <!-- Experience -->
          <div class="mb-3 col-md-6">
            <label for="experience" class="form-label">Years of Experience <span class="text-danger">*</span></label>
            <input type="number" name="doctor[experience]" id="experience" placeholder="Enter years of experience" class="form-control" required>
            <div class="invalid-feedback">Please provide the years of experience.</div>
          </div>
        </div>
      
        <div class="row">
          <!-- Hospital -->
          <div class="mb-3 col-md-6">
            <label for="hospital" class="form-label">Hospital Name <span class="text-danger">*</span></label>
            <input type="text" name="doctor[hospital]" id="hospital" placeholder="Enter hospital name" class="form-control" required>
            <div class="invalid-feedback">Please provide the hospital name.</div>
          </div>
          <!-- Consultant Fees -->
          <div class="mb-3 col-md-6">
            <label for="consultantFees" class="form-label">Consultant Fees <span class="text-danger">*</span></label>
            <input type="number" name="doctor[consultantFees]" id="consultantFees" placeholder="Enter fees" class="form-control" required>
            <div class="invalid-feedback">Please provide consultant fees.</div>
          </div>
        </div>
      
        <!-- Phone -->
        <div class="mb-3">
          <label for="phone" class="form-label">Phone Number <span class="text-danger">*</span></label>
          <input type="text" name="doctor[phone]" id="phone" placeholder="Enter phone number" class="form-control" required>
          <div class="invalid-feedback">Please provide a valid phone number.</div>
        </div>
      
        <!-- Profile Image Upload -->
        <div class="mb-3">
          <label for="profile" class="form-label">Profile Image</label>
          <input type="file" name="profile" id="profile" class="form-control" accept="image/*">
        </div>
      
        <!-- Submit Button -->
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary">Sign up</button>
        </div>
      </form>

      <!-- Optional Google Sign Up -->
      <div class="text-center">
        <button class="btn btn-outline-danger mt-4 m-1" onclick="googleSignIn()"><i class="fa-brands fa-google"></i> oogle</button>
        <button class="btn btn-outline-primary mt-4 m-1" onclick=""><i class="fa-brands fa-facebook-f"></i> acebook</button>
        <button class="btn btn-outline-warning mt-4 m-1" onclick=""><i class="fa-brands fa-microsoft"></i> icrosoft</button>
      </div>
    </div>
  </div>

  <!-- Beautiful Bootstrap Alert -->
  <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100;">
    <!-- User Exist Alert -->
    <div id="userExistAlert" class="alert alert-warning alert-dismissible fade show d-none mt-3 mx-3" role="alert">
      <strong>üëã Welcome back!</strong> You already have an account.
    </div>
    <!-- Save Error in DB Alert -->
    <div id="saveErrorAlert" class="alert alert-danger alert-dismissible fade show d-none mt-3 mx-3" role="alert">
      <strong>‚ö†Ô∏è Something went wrong while creating your account. Please try again later.</strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>

  <!-- Firebase App (the core Firebase SDK) -->
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app-compat.js"></script>
  <!-- Firebase Auth -->
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-auth-compat.js"></script>

  <script>
    // Bootstrap custom validation script
    (function () {
      'use strict';
      window.addEventListener('load', function () {
        // Get all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.getElementsByClassName('needs-validation');
        // Loop over them and prevent submission if invalid
        Array.prototype.filter.call(forms, function (form) {
          form.addEventListener('submit', function (event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();

    // Your Firebase config from Step 3
    const firebaseConfig = {
      apiKey: "AIzaSyBL1BHmP43qqUQlOWIMGQ27WtMoLai8Klg",
      authDomain: "aarogyam-71fdd.firebaseapp.com",
      projectId: "aarogyam-71fdd",
      storageBucket: "aarogyam-71fdd.firebasestorage.app",
      messagingSenderId: "672290909959",
      appId: "1:672290909959:web:cb07d4832e2137ae2cdfa2"
    };

    // Initialize Firebase
    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();

    function googleSignIn() {
      const provider = new firebase.auth.GoogleAuthProvider();
      auth.signInWithPopup(provider)
        .then((result) => {
          const user = result.user;
          fetch('/auth/google/doctor', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({  // Passed as a JSON object
              email: user.email,
              username:  user.displayName,
              uid:  user.uid
            })
          })
          .then(res => res.json()) // Convert into js object
          .then(data => {
            if (!data.success) {
              document.getElementById("saveErrorAlert").classList.remove("d-none");
              return;
            }
            // if they already existed we show popup and logged in
            if (!data.isNewUser) {
              document.getElementById("userExistAlert").classList.remove("d-none");
            }
            // role-based redirect
            // Redirect after short delay so user can see toast
            setTimeout(() => {
              const destination = data.role === 'doctor'
                ? '/doctor/dashboard'
                : '/patient/dashboard';
              window.location.href = destination;
            }, 2000);  // Wait 1.8 seconds before redirect
          });
        })
        .catch((error) => {
          console.error('Google Sign-in error:', error);
        });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
