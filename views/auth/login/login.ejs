<div class="row justify-content-center">
    <h1 style="margin: 15px 100px;">Log in</h1>
    <div class="col-8 min-vh-100 d-flex flex-column align-items-center">
      <div class="login-container text-center">
        <form action="/auth/login" method="POST" class="needs-validation" novalidate>
          <div class="input-box">
            <label for="username" class="form-label">Username</label><br><br>
            <div class="input-container">
              <ion-icon name="person-outline"></ion-icon>
              <input type="text" name="username" id="username" placeholder="Enter username" class="form-control" required>
            </div>
          </div>
  
          <div class="input-box">
            <label for="password" class="form-label">Password</label><br><br>
            <div class="input-container">
              <ion-icon name="lock-closed-outline"></ion-icon>
              <input type="password" name="password" id="password" placeholder="Enter password" class="form-control" required autocomplete="current-password">
              <ion-icon class="show-hide" name="eye-outline"></ion-icon>
            </div>
          </div>
            <%- include('../../includes/flash') %>
          <div class="d-flex justify-content-center">
            <button type="submit" class="btn login-btn">Log in</button>
          </div>
        </form>
      </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const togglePassword = document.querySelector(".show-hide");
        const passwordInput = document.getElementById("password");

        togglePassword.addEventListener("click", function () {
            passwordInput.type = passwordInput.type === "password" ? "text" : "password";
            togglePassword.setAttribute("name", passwordInput.type === "password" ? "eye-outline" : "eye-off-outline");
        });
    });
</script>

