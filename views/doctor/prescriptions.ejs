<%- layout("./layouts/doctorboilerplate") %>

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        transition: 0.3s;
        padding: 1rem;
        margin-bottom: 1rem;
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .btn-custom {
        width: 100%;
        margin-top: 0.5rem;
    }
</style>

<body>
    <div class="container container-fluid">
        <h2 class="">Prescriptions for <%= patient.username %></h2>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for (let appointment of appointments) { %>
                <div class="col">
                    <div class="card">
                        <h5 class="text-dark">
                            <i class="fa-solid fa-calendar"></i> Appointment on <%= new Date(appointment.date).toDateString() %>
                        </h5>
                        <% if (appointment.attachments && appointment.attachments.length > 0) { %>
                            <h5 class="mt-3"><strong>Prescriptions:</strong></h5>
                            <ol class="mt-3">
                                <% for (let file of appointment.attachments) { %>
                                    <li class="ps-2">
                                        <a href="<%= file %>" class="btn btn-primary me-2" target="_blank">
                                            <i class="fa-solid fa-eye"></i> View
                                        </a>
                                        <a href="<%= file %>" class="btn btn-success" target="_blank" download>
                                            <i class="fa-solid fa-download"></i> Download
                                        </a>
                                    </li>
                                <% } %>
                            </ol>
                        <% } else { %>
                            <p class="text-muted">No prescriptions available</p>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</body>
