<style>
    body {
        background-color: #ffffff;
        color: #333333;
        transition: margin-left 0.3s ease-in-out;
    }

    /* Sidebar Styles */
    .sidebar {
        background-color: #ffffff;
        border-right: 1px solid #dcdcdc;
        height: 100vh;
        position: fixed;
        width: 250px;
        padding-top: 20px;
        transition: left 0.4s cubic-bezier(0.25, 1, 0.5, 1); /* Smooth easing */
        left: -250px; /* Initially hidden */
    }

    /* Show Sidebar */
    .sidebar.show {
        left: 0;
    }

    /* Content shifts when sidebar is visible */
    .content {
        margin-left: 0;
        transition: margin-left 0.4s cubic-bezier(0.25, 1, 0.5, 1); /* Smooth easing */
    }

    .content.shifted {
        margin-left: 250px;
    }

    /* Sidebar Toggle Button */
    .sidebar-toggle {
        position: fixed;
        top: 10px;
        left: 10px;
        z-index: 1050;
        background: #007bff;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        transition: left 0.4s cubic-bezier(0.25, 1, 0.5, 1), background 0.3s;
    }

    /* Move toggle button when sidebar is visible */
    .sidebar.show ~ .sidebar-toggle {
        left: 260px;
    }

    /* Hover Effect */
    .sidebar-toggle:hover {
        background: #0266d1;
    }

    .sidebar-toggle:focus {
        outline: none;
    }

    /* Navigation Link Styles */
    .nav-link {
        color: #333333;
        padding: 12px 18px;
        border-radius: 8px;
        margin-bottom: 6px;
        display: flex;
        align-items: center;
        text-decoration: none;
        transition: background 0.3s ease-in-out, color 0.3s ease-in-out;
    }

    .nav-link:hover,
    .nav-link.active {
        background-color: #f0f0f0;
        color: #007bff;
    }

    .nav-link i {
        margin-right: 12px;
    }

    /* Text Styling */
    .sidebar .text-center {
        color: #333333;
    }

    .sidebar .text-muted {
        color: #666666 !important;
    }

    /* Profile Image */
    .profile-image {
        width: 80px;
        height: 80px;
        border-radius: 10px;
        margin-bottom: 12px;
        transition: transform 0.3s ease-in-out;
    }

    .profile-image:hover {
        transform: scale(1.05); /* Subtle hover effect */
    }
</style>

<!-- Sidebar toggle button -->
<button class="sidebar-toggle">
    <i class="bi bi-list"></i>
</button>

<div class="sidebar table-responsive bg-white border-end" style="width:250px; position:fixed; top:60px; padding-top:1.5rem;">
  <table class="table table-borderless ms-3">
    <tbody>
      <tr>
        <td class="text-center" colspan="2">
          <i class="fa-solid fa-user-doctor fa-2x mb-2 me-4"></i><br>
          <small class="text-muted me-4">Doctor</small>
        </td>
      </tr>

      <tr>
        <td><i class="bi bi-house-door"></i></td>
        <td><a href="/doctor/dashboard" class="text-decoration-none">Dashboard</a></td>
      </tr>

      <tr>
        <td><i class="bi bi-calendar"></i></td>
        <td><a href="/doctor/appointments" class="text-decoration-none">Appointments</a></td>
      </tr>

      <tr>
        <td><i class="bi bi-person"></i></td>
        <td><a href="/doctor/patients" class="text-decoration-none">Patients</a></td>
      </tr>

      <tr>
        <td><i class="bi bi-chat-dots"></i></td>
        <td><a href="/doctor/chat" class="text-decoration-none">Chat</a></td>
      </tr>

      <tr>
        <td><i class="bi bi-calendar-week"></i></td>
        <td><a href="/doctor/calendar" class="text-decoration-none">Calendar <span class="badge bg-primary rounded-pill ms-2">New</span></a></td>
      </tr>

      <tr>
        <td><i class="bi bi-box-arrow-right text-danger"></i></td>
        <td><a href="/auth/logout" class="text-decoration-none text-danger">Logout</a></td>
      </tr>
    </tbody>
  </table>
</div>

<!-- JavaScript for Sidebar Toggle -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
    const sidebar = document.querySelector(".sidebar");
    const toggleButton = document.querySelector(".sidebar-toggle");
    const content = document.querySelector(".content");

    toggleButton.addEventListener("click", function () {
        sidebar.classList.toggle("show");
        content.classList.toggle("shifted");
    });
});
</script>
