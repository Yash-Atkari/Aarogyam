<%- layout("./layouts/patientboilerplate") %>

<div class="prescriptions-container">
    <div class="page-header">
        <h2>Prescriptions</h2>
    </div>

    <div class="record-container">
        <table class="prescriptions-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Created by</th>
                    <th>Date</th>
                    <th>Disease</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (records.length === 0) { %>
                    <tr>
                        <td colspan="6">No prescriptions found.</td>
                    </tr>
                <% } else { %>
                    <% records.forEach((record, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= record.summary %></td>
                            <td class="doctor-name"><%= record.doctorName %></td>
                            <td><%= new Date(record.created_at).toLocaleDateString() %></td>
                            <td>
                                <% if (record.disease) { %>
                                    <span class="disease-tag <%= record.disease.replace(/\s+/g, '-') %>">
                                        <%= record.disease %>
                                    </span>
                                <% } else { %>
                                    <span>â€”</span>
                                <% } %>
                            </td>
                            <td class="actions">
                                <% if (record.attachments && record.attachments.length > 0) { %>
                                    <% record.attachments.forEach(file => { %>
                                        <a href="/<%= file %>" class="action-icon download" title="Download" target="_blank">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    <% }) %>
                                <% } else { %>
                                    <span>No files</span>
                                <% } %>
                                <a href="/view-prescription/<%= record._id %>" class="action-icon view" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="/delete-prescription/<%= record._id %>" class="action-icon delete" title="Delete" onclick="return confirm('Are you sure?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<style>
    .prescriptions-container {
        padding: 20px;
    }

    .page-header {
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .record-container {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .prescriptions-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    .prescriptions-table th, .prescriptions-table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .prescriptions-table th {
        background-color: #f8f9fa;
    }

    .doctor-name {
        color: #007bff;
        font-weight: bold;
    }

    .disease-tag {
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 12px;
        font-weight: bold;
    }

    /* Disease Colors */
    .disease-tag.Fever { background: #ff6666; color: white; }
    .disease-tag.Cholera { background: #66cc99; color: white; }
    .disease-tag.Jaundice { background: #cc99ff; color: white; }
    .disease-tag.Typhoid { background: #ffcc66; color: white; }
    .disease-tag.Malaria { background: #ff9966; color: white; }
    .disease-tag.Infection { background: #66cccc; color: white; }

    .actions {
        display: flex;
        gap: 10px;
    }

    .action-icon {
        font-size: 18px;
        text-decoration: none;
        padding: 5px;
        border-radius: 5px;
    }

    .download { color: #6f42c1; }
    .view { color: #28a745; }
    .delete { color: #dc3545; }

    .action-icon:hover {
        opacity: 0.7;
    }
</style>
