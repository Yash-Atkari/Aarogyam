<%- layout("./layouts/patientboilerplate") %>

<style>
    body { background-color: #f8f9fa; }
    .appointments-container {
        max-width: 100%;
        /* margin: auto; */
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .appointment-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px;
        margin-bottom: 10px;
    }

    .appointment-header {
        font-size: 20px;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .doctor-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }
    .doctor-info img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }
    .status-confirm { color: green; font-weight: bold; }
    .status-cancelled { color: red; font-weight: bold; }
    .status-pending { color: orange; font-weight: bold; }
    .actions i {
        cursor: pointer;
        font-size: 1.2rem;
        margin-right: 10px;
    }

    /* -------------- */

    .filter-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        position: absolute;
        z-index: -1;
    }

    .filter-container .form-control,
    .filter-container .btn {
        border-radius: 8px;
    }

    .filter-container .row {
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
    }

    @media (max-width: 768px) {
        .filter-container .col-md-3,
        .filter-container .col-md-2 {
            flex: 1 1 100%;
            margin-bottom: 10px;
        }
    }
</style> 

<div class="container">
    <div class="appointment-header">
        <h2>Upcoming Appointments</h2>
    </div>

    <form id="filterForm" method="GET" class="mt-4" action="/patient/filterappointments">
        <div class="row g-2">
            <div class="col-md-3">
                <input type="text" class="form-control" name="search" placeholder="Search by Doctor, Reason, Disease">
            </div>
            <div class="col-md-2">
                <input type="date" class="form-control" name="date">
            </div>
            <div class="col-md-2">
                <select class="form-control" name="status">
                    <option value="" selected disabled>Search by Status</option>
                    <option value="pending">Pending</option>
                    <option value="confirmed">Confirmed</option>
                    <option value="completed">Completed</option>
                    <option value="cancelled">Cancelled</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </div>
    </form>

    <div class="appointments-container mt-4 table-responsive">
        <% if (appointments && appointments.length > 0) { %> 
            <% appointments.forEach(appointment => { %>
                <div class="appointment-card">
                    <div class="doctor-info">
                        <div>
                            <strong>Name</strong> <br>
                            <small><%= appointment.doctorId.fullName %></small>
                        </div>
                        <div>
                            <strong>Specialization</strong> <br>
                            <small><%= appointment.doctorId.specialization %></small>
                        </div>
                    </div>
                    <div>
                        <strong>Date</strong> <br>
                        <small><%= appointment.date.toString().split(" ").slice(0, 4).join(" ") %></small>
                    </div>
                    <div>
                        <strong>Time</strong> <br>
                        <small><%= appointment.timeSlot %></small>
                    </div>
                    <div>
                        <strong>Reason</strong> <br>
                        <small><%= appointment.reason %></small>
                    </div>
                    <div>
                        <strong>Contact</strong> <br>
                        <small><%= appointment.doctorId.phone %></small>
                    </div>
                    <div>
                        <strong>Location</strong> <br>
                        <small><%= appointment.doctorId.hospital %></small>
                    </div>
                    <div>
                        <strong>Status</strong> <br>
                        <small><%= appointment.status %></small>
                    </div>
                    <% if (appointment.status === 'completed') { %>
                        <div>
                            <strong>Disease</strong> <br>
                            <small><%= appointment.disease %></small>
                        </div>
                    <% } %>
                    <div class="actions">
                        <strong>Action</strong> <br>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelModal" onclick="setAppointmentId('<%= appointment._id %>')">Cancel</button>                                      
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            No appointments found.
        <% } %>
    </div>
</div>

<!-- Cancel Confirmation Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="cancelModalLabel">Confirm Cancellation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to cancel this appointment?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
          <form id="cancelForm" method="POST">
            <button type="submit" class="btn btn-danger">Yes, Cancel</button>
          </form>
        </div>
      </div>
    </div>
</div>

<script>
    function setAppointmentId(appointmentId) {
      document.getElementById("cancelForm").action = `/patient/upcomingappointments/cancel/${appointmentId}?_method=DELETE`;
    }
</script>
