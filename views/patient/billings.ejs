<%- layout("./layouts/patientboilerplate") %>

<div class="billing-container container">
    <div class="page-header">
        <h2>Billing</h2>
    </div>

    <div class="record-container table-responsive">
    <table class="billing-table">
      <thead>
        <tr>
          <th>Invoice No.</th>
          <th>Doctor</th>
          <th>Disease</th>
          <th>Date</th>
          <th>Amount</th>
          <th>Payment</th>
          <th>Status</th>
          <th>Action</th>
          <th>Pay</th>
        </tr>
      </thead>

      <tbody>
        <% if (!bills || bills.length === 0) { %>
          <tr>
            <td colspan="9">
              <p style="margin: 0;">
                No billings found
              </p>
            </td>
          </tr>
        <% } else { %>
          <% bills.forEach((bill) => { %>
            <tr data-billingid="<%= bill._id %>">
              <td><%= bill.invoiceNo %></td>
              <td class="doctor-name"><%= bill.doctorId.fullName || bill.doctorId.username %></td>
              <td><%= bill.reason %></td>
              <td><%= new Date(bill.date).toLocaleDateString() %></td>
              <td>â‚¹<%= bill.amount %></td>
              <td><%= bill.paymentMethod %></td>
              <td class="status <%= bill.status === 'paid' ? 'paid' : 'unpaid' %>">
                <%= bill.status %>
              </td>

              <td>
                <% if (Array.isArray(bill.attachments) && bill.attachments.length > 0) { %>
                  <div class="actions" role="group" aria-label="attachment actions">
                    <% bill.attachments.forEach((file) => { %>
                      <a href="<%= file %>" class="action-icon view" title="View" target="_blank" rel="noopener">
                        <i class="fas fa-eye" aria-hidden="true"></i>
                        <span class="visually-hidden">View</span>
                      </a>

                      <a href="<%= file %>" class="action-icon download" title="Download" target="_blank" rel="noopener" download>
                        <i class="fas fa-download" aria-hidden="true"></i>
                        <span class="visually-hidden">Download</span>
                      </a>

                      <button type="button"
                              class="action-icon delete btn-link"
                              title="Delete"
                              data-bs-toggle="modal"
                              data-bs-target="#cancelModal"
                              data-file="<%= encodeURIComponent(file) %>"
                              data-billingid="<%= bill._id %>">
                        <i class="fas fa-trash" aria-hidden="true"></i>
                        <span class="visually-hidden">Delete</span>
                      </button>
                    <% }); %>
                  </div>
                <% } else { %>
                  <span>No files</span>
                <% } %>
              </td>

              <td>
                <button
                  class="rzp-button btn btn-primary"
                  type="button"
                  data-amount="<%= bill.amount %>"
                  data-billingid="<%= bill._id %>"
                  aria-label="Pay invoice <%= bill.invoiceNo %>">
                  Pay
                </button>
              </td>
            </tr>
          <% }); %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- Include Razorpay checkout script -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>

<script>
  document.querySelectorAll('.rzp-button').forEach(button => {
    button.addEventListener('click', async function () {
      const amountToPay = parseInt(this.getAttribute('data-amount'));
      const billingId = this.getAttribute('data-billingid');

      // 1. Create order on backend
      const res = await fetch(`/create-order`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ amount: amountToPay })
      });

      const { success, order } = await res.json();
      if (!success) return alert('Could not initiate payment.');

      // 2. Configure Razorpay checkout
      const options = {
        key: 'rzp_test_84nS8Ya9sCwynn',
        amount: order.amount,
        currency: order.currency,
        name: 'Aarogyam',
        description: 'Health Services',
        order_id: order.id,
        handler: async function (response) {
          const verifyRes = await fetch(`/verify-payment/${billingId}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(response)
          });

          const verifyData = await verifyRes.json();
          if (verifyData.success) {
            alert('Payment successful!');
            window.location.href = '/patient/dashboard';
          } else {
            alert('Payment verification failed.');
          }
        },
        theme: { color: '#1A73E8' },
        method: {
          upi: true,
          card: true,
          netbanking: true,
          wallet: true
        }
      };

      const rzp = new Razorpay(options);
      rzp.open();
    });
  });
</script>

