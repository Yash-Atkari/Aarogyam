<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Aarogyam</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous"/>
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/auth/signup/patient.css">
</head>
<body>
  <div class="container">
    <%- include("../../includes/flash") %>
    <div class="form-container">
      <h1>Patient Sign up</h1>
      <form action="/auth/signup/patient" method="POST" class="needs-validation" novalidate>
        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
          <input type="email" name="patient[email]" id="email" placeholder="Enter email" class="form-control" required>
          <div class="invalid-feedback">Please provide a valid email.</div>
        </div>
      
        <div class="row">
          <!-- Username -->
          <div class="mb-3 col-md-6">
            <label for="username" class="form-label">Username <span class="text-danger">*</span></label>
            <input type="text" name="patient[username]" id="username" placeholder="Enter username" class="form-control" required>
            <div class="invalid-feedback">Please provide a username.</div>
          </div>
          <!-- Password -->
          <div class="mb-3 col-md-6">
            <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
            <input type="password" name="patient[password]" id="password" placeholder="Enter password" class="form-control" required autocomplete="new-password">
            <div class="invalid-feedback">Please provide a password.</div>
          </div>
        </div>
      
        <!-- Submit Button -->
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-primary">Sign up</button>
        </div>
      </form> 

      <!-- Optional Google Sign Up -->
      <div class="text-center">
        <button class="btn btn-outline-danger mt-4 m-1" onclick="googleSignIn()"><i class="fa-brands fa-google"></i> oogle</button>
        <button class="btn btn-outline-primary mt-4 m-1" onclick=""><i class="fa-brands fa-facebook-f"></i> acebook</button>
        <button class="btn btn-outline-warning mt-4 m-1" onclick=""><i class="fa-brands fa-microsoft"></i> icrosoft</button>
      </div>
    </div>
  </div>

  <!-- Bootstrap Alerts -->
  <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100;">
    <!-- User Exist Alert -->
    <div id="userExistAlert" class="alert alert-warning alert-dismissible fade show d-none mt-3 mx-3" role="alert">
      <strong>üëã Welcome back!</strong> You already have an account.
    </div>
    <!-- Save Error in DB Alert -->
    <div id="saveErrorAlert" class="alert alert-danger alert-dismissible fade show d-none mt-3 mx-3" role="alert">
      <strong>‚ö†Ô∏è Something went wrong while creating your account. Please try again later.</strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>

  <!-- Firebase SDKs -->
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.23.0/firebase-auth-compat.js"></script>

  <script>
    // Bootstrap custom validation
    (function () {
      'use strict';
      window.addEventListener('load', function () {
        var forms = document.getElementsByClassName('needs-validation');
        Array.prototype.filter.call(forms, function (form) {
          form.addEventListener('submit', function (event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();

    // Firebase config
    const firebaseConfig = {
      apiKey: "AIzaSyBL1BHmP43qqUQlOWIMGQ27WtMoLai8Klg",
      authDomain: "aarogyam-71fdd.firebaseapp.com",
      projectId: "aarogyam-71fdd",
      storageBucket: "aarogyam-71fdd.firebasestorage.app",
      messagingSenderId: "672290909959",
      appId: "1:672290909959:web:cb07d4832e2137ae2cdfa2"
    };

    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();

    function googleSignIn() {
      const provider = new firebase.auth.GoogleAuthProvider();
      auth.signInWithPopup(provider)
        .then((result) => {
          const user = result.user;
          fetch('/auth/google/patient', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              email: user.email,
              username: user.displayName,
              uid: user.uid
            })
          })
          .then(res => res.json())
          .then(data => {
            if (!data.success) {
              document.getElementById("saveErrorAlert").classList.remove("d-none");
              return;
            }
            if (!data.isNewUser) {
              document.getElementById("userExistAlert").classList.remove("d-none");
            }
            setTimeout(() => {
              const destination = data.role === 'doctor'
                ? '/doctor/dashboard'
                : '/patient/dashboard';
              window.location.href = destination;
            }, 2000);
          });
        })
        .catch((error) => {
          console.error('Google Sign-in error:', error);
        });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
