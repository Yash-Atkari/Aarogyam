<%- layout("./layouts/patient-boilerplate") %>

<!-- Link external CSS -->
<link rel="stylesheet" href="/css/patient/doctors.css">

<body>
    <div class="container-fluid container">
        <h2 class="">My Doctors</h2>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% if (doctors && doctors.length > 0) { %>
                <% for (let doctor of doctors) { %>
                    <div class="col">
                        <div class="doctor-card">
                            <h4 class="text-primary">
                                <i class="fa-solid fa-user-doctor"></i>&nbsp;
                                <%= doctor.fullName || doctor.username %>
                            </h4>
                            <p><strong>Email:</strong> <%= doctor.email %></p>
                            <p><strong>Specialization:</strong> <%= doctor.specialization %></p>
                            <p><strong>Experience:</strong> <%= doctor.experience %> years</p>
                            <p><strong>Consultant Fees:</strong> â‚¹<%= doctor.consultantFees %></p>
                            <p><strong>Phone:</strong> <%= doctor.phone %></p>
                        </div>
                    </div>
                <% } %>
            <% } else { %>
                <p>No doctors found.</p>
            <% } %>
        </div>
    </div>
</body>
