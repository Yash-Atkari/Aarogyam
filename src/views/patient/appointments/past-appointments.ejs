<%- layout("./layouts/patient-boilerplate") %>
<link rel="stylesheet" href="/css/patient/appointments/appointments.css">

<div class="container">
    <div class="appointment-header">
        <h2>Past Appointments</h2>
    </div>

    <!-- Search and Filter Section -->
    <form id="filterForm" method="GET" class="mt-4" action="/patient/filterappointments">
        <div class="row g-2">
            <div class="col-md-3">
                <input type="text" class="form-control" name="search" placeholder="Search by Doctor, Reason, Disease">
            </div>
            <div class="col-md-2">
                <input type="date" class="form-control" name="date">
            </div>
            <div class="col-md-2">
                <select class="form-control" name="status">
                    <option value="" selected disabled>Search by Status</option>
                    <option value="pending">Pending</option>
                    <option value="confirmed">Confirmed</option>
                    <option value="completed">Completed</option>
                    <option value="cancelled">Cancelled</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </div>
    </form>

    <div class="appointments-container mt-4 table-responsive">
        <% if (appointments && appointments.length > 0) { %> 
            <table class="appointments-table container-fluid">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Doctor</th>
                        <th>Specialization</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Reason</th>
                        <th>Contact</th>
                        <th>Location</th>
                        <th>Status</th>
                        <th>Disease</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% appointments.forEach((appointment, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td class="doctor-name"><%= appointment.doctorId.fullName || appointment.doctorId.username %></td>
                            <td><%= appointment.doctorId.specialization %></td>
                            <td><%= new Date(appointment.date).toLocaleDateString() %></td>
                            <td><%= appointment.timeSlot %></td>
                            <td><%= appointment.reason || "—" %></td>
                            <td><%= appointment.doctorId.phone %></td>
                            <td><%= appointment.doctorId.hospital %></td>
                            <td><%= appointment.status %></td>
                            <td>
                                <% if (appointment.status === 'completed' && appointment.disease) { %>
                                    <span class="<%= appointment.disease.replace(/\s+/g, '-') %>">
                                        <%= appointment.disease %>
                                    </span>
                                <% } else { %>
                                    —
                                <% } %>
                            </td>
                            <td class="actions py-3">
                                <button type="button" class="btn btn-danger btn-sm" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#cancelModal" 
                                        onclick="setAppointmentId('<%= appointment._id %>')"
                                        <% if (['cancelled', 'confirmed', 'completed'].includes(appointment.status)) { %> disabled <% } %>>
                                    Cancel
                                </button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No appointments found</p>
        <% } %>
    </div>
</div>

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirm Cancellation</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to cancel this appointment?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
          <form id="cancelForm" method="POST">
            <button type="submit" class="btn btn-danger">Yes, Cancel</button>
          </form>
        </div>
      </div>
    </div>
</div>

<script>
function setAppointmentId(appointmentId) {
  document.getElementById("cancelForm").action = `/patient/pastappointments/cancel/${appointmentId}?_method=DELETE`;
}
</script>
