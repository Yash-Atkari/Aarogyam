<%- layout("./layouts/patientboilerplate") %>

<!-- Link CSS -->
<link rel="stylesheet" href="/css/patient/billings.css">

<div class="billing-container container">
    <div class="page-header">
        <h2>Billing</h2>
    </div>

    <div class="record-container table-responsive">
        <table class="billing-table">
            <thead>
                <tr>
                    <th>Invoice No.</th>
                    <th>Doctor</th>
                    <th>Disease</th>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Payment</th>
                    <th>Status</th>
                    <th>Action</th>
                    <th>Pay</th>
                </tr>
            </thead>

            <tbody>
                <% if (!bills || bills.length === 0) { %>
                    <tr>
                        <td colspan="9">
                            <p style="margin: 0;">No billings found</p>
                        </td>
                    </tr>
                <% } else { %>
                    <% bills.forEach((bill) => { %>
                        <tr data-billingid="<%= bill._id %>">
                            <td><%= bill.invoiceNo %></td>
                            <td class="doctor-name"><%= bill.doctorId.fullName || bill.doctorId.username %></td>
                            <td><%= bill.reason %></td>
                            <td><%= new Date(bill.date).toLocaleDateString() %></td>
                            <td>â‚¹<%= bill.amount %></td>
                            <td><%= bill.paymentMethod %></td>
                            <td class="status <%= bill.status === 'paid' ? 'paid' : 'unpaid' %>">
                                <%= bill.status %>
                            </td>

                            <td>
                                <% if (Array.isArray(bill.attachments) && bill.attachments.length > 0) { %>
                                    <div class="actions" role="group" aria-label="attachment actions">
                                        <span class="border rounded p-1">
                                          <% bill.attachments.forEach((file, index) => { %>
                                            <a href="<%= file %>" class="action-icon view" title="View" target="_blank" rel="noopener">
                                                <i class="fas fa-eye" aria-hidden="true"></i>
                                            </a>

                                            <a href="<%= file %>" class="action-icon download" title="Download" target="_blank" rel="noopener" download>
                                                <i class="fas fa-download" aria-hidden="true"></i>
                                            </a>
                                            <button type="button"
                                                class="action-icon delete btn-link"
                                                title="Delete"
                                                data-bs-toggle="modal"
                                                data-bs-target="#cancelModal"
                                                data-file="<%= file %>"
                                                data-billingid="<%= bill._id %>">
                                                <i class="fas fa-trash" aria-hidden="true"></i>
                                            </button>
                                        </span>
                                        <% }); %>
                                    </div>
                                <% } else { %>
                                    <span>No files</span>
                                <% } %>
                            </td>

                            <td>
                                <button class="rzp-button btn btn-primary"
                                    type="button"
                                    data-amount="<%= bill.amount %>"
                                    data-billingid="<%= bill._id %>">
                                    Pay
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this billing?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <form id="deleteForm" method="POST">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const cancelModal = document.getElementById('cancelModal');
    cancelModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const filePath = button.getAttribute('data-file');
        const billingId = button.getAttribute('data-billingid');
        const cancelForm = document.getElementById("deleteForm");
        cancelForm.action = `/patient/billings/${billingId}/attachments/delete?file=${encodeURIComponent(filePath)}`;
    });
</script>
