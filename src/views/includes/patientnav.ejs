<style>
  body {
      background-color: #ffffff;
      color: #333333;
      transition: margin-left 0.3s ease-in-out;
  }

  /* Sidebar Styles */
  .sidebar {
      background-color: #ffffff;
      border-right: 1px solid #dcdcdc;
      min-height: 100vh;
      position: absolute;
      top: 60px;
      width: 250px;
      transition: left 0.4s cubic-bezier(0.25, 1, 0.5, 1); /* Smooth transition */
      left: -250px; /* Initially hidden */
      
  }

  /* Show Sidebar */
  .sidebar.show {
      left: 0;
  }

  /* Content shifts when sidebar is visible */
  .content {
      margin-left: 0;
      transition: margin-left 0.4s cubic-bezier(0.25, 1, 0.5, 1);
  }

  .content.shifted {
      margin-left: 250px;
  }

  /* Sidebar Toggle Button */
  .sidebar-toggle {
      position: fixed;
      top: 10px;
      left: 10px;
      z-index: 1050;
      background: #007bff;
      color: white;
      border: none;
      padding: 8px 12px;
      border-radius: 5px;
      cursor: pointer;
      transition: transform 0.4s cubic-bezier(0.25, 1, 0.5, 1), background 0.3s;
  }

  /* Move toggle button when sidebar is visible */
  .sidebar.show ~ .sidebar-toggle {
      left: 260px;
  }

  /* Hover Effect */
  .sidebar-toggle:hover {
    background: #0266d1;
  }

  .sidebar-toggle:focus {
      outline: none;
  }

  /* Navigation Link Styles */
  .nav-link {
      color: #333333;
      padding: 12px 18px;
      border-radius: 8px;
      margin-bottom: 6px;
      display: flex;
      align-items: center;
      text-decoration: none;
      transition: background 0.3s ease-in-out, color 0.3s ease-in-out;
  }

  .nav-link:hover,
  .nav-link.active {
      background-color: #f0f0f0;
      color: #007bff;
  }

  .nav-link i {
      margin-right: 12px;
  }

  /* Text Styling */
  .sidebar .text-center {
      color: #333333;
  }

  .sidebar .text-muted {
      color: #666666 !important;
  }

  /* Profile Image */
  .profile-image {
      width: 80px;
      height: 80px;
      border-radius: 10px;
      margin-bottom: 12px;
      transition: transform 0.3s ease-in-out;
  }

  .profile-image:hover {
      transform: scale(1.05); /* Subtle hover effect */
  }
</style>

<!-- Sidebar Toggle Button -->
<button class="sidebar-toggle">
  <i class="bi bi-list"></i>
</button>

