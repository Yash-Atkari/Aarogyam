<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aarogyam</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/includes/patientnav.css">
</head>
<body>
  <!-- Sidebar Toggle Button -->
  <button class="sidebar-toggle">
    <i class="bi bi-list"></i>
  </button>

  <!-- Sidebar -->
  <div class="sidebar table-responsive bg-white border-end" style="width:250px; position:fixed; padding-top:1.5rem;">
    <table class="table table-borderless ms-3">
      <tbody>
        <tr>
          <td class="text-center" colspan="2">
            <i class="fa-solid fa-user fa-2x mb-2 me-4"></i><br>
            <small class="text-muted me-4">Patient</small>
          </td>
        </tr>
        <tr>
          <td><i class="bi bi-house-door"></i></td>
          <td><a href="/patient/dashboard" class="text-decoration-none">Dashboard</a></td>
        </tr>
        <tr>
          <td><i class="bi bi-calendar"></i></td>
          <td>
            <table class="table table-borderless mb-0">
              <tr><td><a href="/patient/bookappointment" class="text-decoration-none">• Book Appointment</a></td></tr>
              <tr><td><a href="/patient/upcomingappointments" class="text-decoration-none">• Upcoming</a></td></tr>
              <tr><td><a href="/patient/todaysappointments" class="text-decoration-none">• Today</a></td></tr>
              <tr><td><a href="/patient/pastappointments" class="text-decoration-none">• Past</a></td></tr>
            </table>
          </td>
        </tr>
        <tr>
          <td><i class="bi bi-clipboard"></i></td>
          <td><a href="/patient/healthrecords" class="text-decoration-none">Medical Records</a></td>
        </tr>
        <tr>
          <td><i class="bi bi-file-text"></i></td>
          <td><a href="/patient/prescriptions" class="text-decoration-none">Prescriptions</a></td>
        </tr>
        <tr>
          <td><i class="bi bi-receipt"></i></td>
          <td><a href="/patient/billings" class="text-decoration-none">Billing</a></td>
        </tr>
        <tr>
          <td><i class="bi bi-people"></i></td>
          <td><a href="/patient/doctors" class="text-decoration-none">Doctors</a></td>
        </tr>
        <tr>
          <td><i class="bi bi-chat-square-text"></i></td>
          <td><a href="/patient/chat" class="text-decoration-none">Chat</a></td>
        </tr>
        <tr>
          <td><i class="bi bi-box-arrow-right text-danger"></i></td>
          <td><a href="/auth/logout" class="text-decoration-none text-danger">Logout</a></td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- JavaScript for Sidebar Toggle -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
        const sidebar = document.querySelector(".sidebar");
        const toggleButton = document.querySelector(".sidebar-toggle");
        const content = document.querySelector(".content");

        toggleButton.addEventListener("click", function () {
            sidebar.classList.toggle("show");
            if(content) content.classList.toggle("shifted");
        });
    });
  </script>
</body>
</html>
