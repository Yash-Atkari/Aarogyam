<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aarogyam</title>
  
  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/includes/doctornav.css">
</head>
<body>
  <!-- Sidebar toggle button -->
  <button class="sidebar-toggle">
      <i class="bi bi-list"></i>
  </button>

  <div class="sidebar table-responsive bg-white border-end" style="width:250px; position:fixed; top:60px; padding-top:1.5rem;">
    <table class="table table-borderless ms-3">
      <tbody>
        <tr>
          <td class="text-center" colspan="2">
            <i class="fa-solid fa-user-doctor fa-2x mb-2 me-4"></i><br>
            <small class="text-muted me-4">Doctor</small>
          </td>
        </tr>

        <tr>
          <td><i class="bi bi-house-door"></i></td>
          <td><a href="/doctor/dashboard" class="text-decoration-none">Dashboard</a></td>
        </tr>

        <tr>
          <td><i class="bi bi-calendar"></i></td>
          <td><a href="/doctor/appointments" class="text-decoration-none">Appointments</a></td>
        </tr>

        <tr>
          <td><i class="bi bi-person"></i></td>
          <td><a href="/doctor/patients" class="text-decoration-none">Patients</a></td>
        </tr>

        <tr>
          <td><i class="bi bi-box-arrow-right text-danger"></i></td>
          <td><a href="/auth/logout" class="text-decoration-none text-danger">Logout</a></td>
        </tr>
      </tbody>
    </table>
  </div>

  <!-- JavaScript for Sidebar Toggle -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const sidebar = document.querySelector(".sidebar");
      const toggleButton = document.querySelector(".sidebar-toggle");
      const content = document.querySelector(".content");

      toggleButton.addEventListener("click", function () {
          sidebar.classList.toggle("show");
          content?.classList.toggle("shifted");
      });
    });
  </script>
</body>
</html>
