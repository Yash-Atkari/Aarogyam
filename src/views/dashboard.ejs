<%- layout("/layouts/boilerplate") %>

<!-- Link to external stylesheet -->
<link rel="stylesheet" href="/css/dashboard.css">

<div class="landing-container">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 hero-content">
          <h1>Healthcare Management Simplified</h1>
          <p class="hero-subtitle">
            Aarogyam is a student-focused healthcare management system designed to securely store and manage health records, streamline medical documentation, and enhance accessibility to healthcare services.
          </p>
          <div class="hero-buttons">
            <a href="/auth/signup" class="btn-custom">Get Started</a>
            <a href="#features" class="btn-outline-custom">Learn More</a>
          </div>
        </div>
        <div class="col-lg-6 hero-image">
          <img src="/images/hero-image.jpg" alt="Healthcare professionals" class="img-fluid" />
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="features-section">
    <div class="container pt-5">
      <div class="section-header">
        <h2>Comprehensive Healthcare Solutions</h2>
        <p>Everything you need to manage healthcare operations efficiently</p>
      </div>
      
      <div class="row features-grid">
        <div class="col-md-4 feature-card">
          <div class="feature-icon">
            <!-- SVG Icon -->
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#1A73E8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"></path>
              <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
              <path d="M9 14h6"></path>
              <path d="M9 10h6"></path>
              <path d="M12 18h.01"></path>
            </svg>
          </div>
          <h3>Medical Records</h3>
          <p>Securely store and access patient medical records with ease, ensuring data privacy and compliance.</p>
        </div>
        
        <div class="col-md-4 feature-card">
          <div class="feature-icon">
            <!-- SVG Icon -->
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#1A73E8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
          </div>
          <h3>Appointment Management</h3>
          <p>Streamline scheduling, reduce wait times, and optimize resource allocation with our intuitive system.</p>
        </div>
        
        <div class="col-md-4 feature-card">
          <div class="feature-icon">
            <!-- SVG Icon -->
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#1A73E8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h3>Patient-Doctor Communication</h3>
          <p>Enable seamless communication between healthcare providers and patients for better care coordination.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Empower Your Healthcare Journey</h2>
        <p>Experience seamless medical record-keeping, appointment management, and more with Aarogyam.</p>
        <div class="cta-buttons">
          <a href="/auth/signup" class="btn-custom signup">Sign Up Now</a>
          <a href="/auth/login" class="btn-outline-custom">Login</a>
        </div>
      </div>
    </div>
  </section>
</div>
