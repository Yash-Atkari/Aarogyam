<%- layout('./layouts/doctor-boilerplate') %>

<!-- Link to external CSS -->
<link rel="stylesheet" href="/css/doctor/dashboard.css">

<div class="dashboard-container container">
    <div class="dashboard-header">
        <h2>Dashboard</h2>
    </div>

    <div class="welcome-card">
        <div class="welcome-content">
            <!-- <img src="" alt="Doctor Profile" class="doctor-profile"> -->
            <div class="welcome-text">
                <h3>Welcome back</h3>
                <i class="fa-solid fa-user fs-4"></i>
                <span class="doctor-name">&nbsp;Dr. <%= doctor.fullName || doctor.username %></span>
                <p>
                    Dedicated to providing the best healthcare services with <%= doctor.experience %> years of experience.
                </p>
            </div>
        </div>
    </div>

    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-number"><%= doctor.appointments.length %>+</div>
            <div class="stat-label">Appointments</div>
        </div>
        <div class="stat-card">
            <div class="stat-number"><%= doctor.patients.length %>+</div>
            <div class="stat-label">Patients</div>
        </div>
    </div>

    <div class="doctor-info">
        <h3>Doctor Information:</h3>
        <ul>
            <li><strong>Full Name:</strong> <%= doctor.fullName %></li>
            <li><strong>Email:</strong> <%= doctor.email %></li>
            <li><strong>Qualification:</strong> <%= doctor.qualification %></li>
            <li><strong>Specialization:</strong> <%= doctor.specialization %></li>
            <li><strong>Experience:</strong> <%= doctor.experience %> years</li>
            <li><strong>Hospital:</strong> <%= doctor.hospital %></li>
            <li><strong>Consultant Fees:</strong> <%= doctor.consultantFees %></li>
            <li><strong>Phone:</strong> <%= doctor.phone %></li>
        </ul>

        <!-- Show Availability Slots -->
        <% if (doctor.availabilitySlots && doctor.availabilitySlots.length > 0) { %>
            <h3 class="mt-3">Available Slots:</h3>
            <div class="d-flex flex-wrap gap-2">
                <% doctor.availabilitySlots.forEach(function(slot) { %>
                    <p class="badge bg-success p-2 fs-6">
                        <%= new Date(slot.date).toLocaleDateString("en-GB", { day:"2-digit", month:"short", year:"numeric" }) %> 
                        (<%= slot.startTime %> - <%= slot.endTime %>)
                    </p>
                <% }) %>
            </div>
        <% } else { %>
            <div class="alert alert-info mt-3" role="alert">
                <i class="fa-regular fa-calendar-plus"></i>&nbsp;
                <span>Add your available slots by clicking update to let patients book appointments easily.</span>
            </div>
        <% } %>

        <a href="/doctor/profile/<%= doctor._id %>" class="btn btn-primary mt-3">Update Profile</a>
    </div>
</div>
